{
  "name": "claude-agent-server-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:server": "bun run --elide-lines=0 --filter @claude-agent/server start",
    "start:sandbox": "bun run --filter @claude-agent/server start",
    "build:e2b": "bun run --elide-lines=0 --env-file=.env --filter @claude-agent/e2b-build build",
    "test:client": "bun run --elide-lines=0 --env-file=.env --filter @dzhng/claude-agent test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@dzhng/claude-agent": "^0.2.0"
  }
}
